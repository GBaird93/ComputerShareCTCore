@model HomeViewModel


@{
    ViewData["Title"] = "Home Page";
}

@if (TempData["Error"] != null)
{
    <div class="bg bg-warning">
        <p class="text-danger text-center">@TempData["Error"]</p>
    </div>
}

<div class="text-center">
    <h1 class="display-4">Stock Trade Reviewer</h1>
</div>

<div>
    <form method="post" asp-controller="Home" asp-action="ImportFile" enctype="multipart/form-data">
        <input asp-for="MyFile" type="file" />
        <button type="submit" class="btn btn-primary">Upload File</button>
    </form>
</div>




